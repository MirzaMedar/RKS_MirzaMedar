<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

            app:title="Add a post"
            app:titleTextColor="#ffffff" />

        <EditText
            android:id="@+id/postTitle"
            style="@android:style/Widget.Material.Light.EditText"
            android:layout_width="312dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="213dp"
            android:ems="10"
            android:hint="Enter post title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/postText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="227dp"
            android:width="312dp"
            android:height="56dp"
            android:ems="10"
            android:hint="Enter text (multiline)"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/upload_ss_btn"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="156dp"
            android:drawableLeft="@drawable/ic_screenshot"
            android:drawablePadding="30dp"
            android:paddingLeft="12dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Upload screenshot"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:drawableLeft="@drawable/ic_sacuvaj"
            android:paddingLeft="12dp"
            android:backgroundTint="@color/colorAccent"
            android:text="ADD POST"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="155dp"
            android:layout_height="139dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            app:srcCompat="@drawable/ic_dodaj_post_plava" />


    </RelativeLayout>






    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        />
</android.support.v4.widget.DrawerLayout>